<%= stylesheet_link_tag "profile" %>
<%= stylesheet_link_tag "https://fonts.googleapis.com/css2?family=Protest+Riot&family=Quicksand:wght@300..700&display=swap", media: 'all' %>

<div class="outerDiv">
  <div class="outerBack">
    <a href="<%= transactions_path %>" class="back-button">&lt;</a>
  </div>
  <div id="user-details">
    <div class="titleDiv">
      <p class="title">Transaction Details</p>
    </div>
    <div class="outerDetails">
      <div class="charDiv">
        <p class="char">
          UIN:
          <%= @transaction.uid %>
        </p>
      </div>

      <div class="charDiv">
        <p class="char">
          Type:
          <%= @transaction.transaction_type %>
        </p>
      </div>

      <div class="charDiv">
        <p class="char">
          Time:
          <%= @transaction.time %>
        </p>
      </div>

      <div class="charDiv">
        <p class="char">
          Amount:
          <%= @transaction.amount %>
        </p>
      </div>
    </div>
  </div>
</div>